
<h1>Behold All Movies!</h1>
<div class="row">

  {{#each allMovies}}
  <div class="a-movie col-lg-6">
    {{#with this}}
    <h3><a href="/movies/{{id}}">{{title}}</a></h3>
    <p>{{director}}, {{year}}</p>
      <p>Rating: {{my_rating}}</p>
      <a href="/movies/{{id}}/edit"><button class="btn"type="button">Edit</button></a>

      <form action="/movies/{{id}}?_method=DELETE" method="post">
        <input class="btn" type="submit" name="delete" value="Delete">
      </form>

    <img src="{{poster_url}}" alt="oops! movie poster"></br>
    {{/with}}
  </br>
</br>
  </div>
  {{/each}}

</div>
